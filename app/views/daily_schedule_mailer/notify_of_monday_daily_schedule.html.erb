                                      <div style="display:inline-block; margin: 0 -2px; max-width:115px; vertical-align:top; width:100%;">

                                          <table align="left" border="0" cellpadding="0" cellspacing="0" width="115">
                                              <tr>
                                                <td valign="top" style="padding: 40px 0 0 0;" class="mobile-hide"><a href="<%= schedule_url(submission) %>" target="_blank"><img src="<%= image_url '/daily_schedule_email/calendar.png' %>" alt="Calendar" width="105" height="105" border="0" style="display: block; font-family: Arial; color: #666666; font-size: 14px; width: 105px; height: 105px;"></a></td>
                                              </tr>
                                          </table>
                                      </div>
                                      <!--[if (gte mso 9)|(IE)]>
                                      </td>
                                      <td align="left" valign="top" width="385">
                                      <![endif]-->
